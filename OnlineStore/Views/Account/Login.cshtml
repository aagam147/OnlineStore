@using OnlineStore.ViewModel;
@model LoginViewModel

<div class="card">
    <div class="card-body">
        <h2 class="mb-2 text-center">Sign In</h2>
        <p class="text-center">Login to stay connected.</p>
        <form asp-action="Login" method="post" id="loginform">
            <span class="text-danger">
            @Html.ValidationMessage("error")
            </span>
            <div class="form-outline mb-4">
                <label class="form-label" for="UserName">UserName</label><span class="text-danger">*</span>
                <input type="text" class="form-control" asp-for="UserName" placeholder="Enter Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            
            <div class="form-outline mb-4">
                <label class="form-label" for="Password">Password</label><span class="text-danger">*</span>
                <input type="password" class="form-control" asp-for="Password" autocomplete="off" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="row mb-4 text-center">
                <p class="mt-2">
                    Don't have an Account? <a asp-controller="Account" asp-action="Register" class="text-underline">Sign Up</a>
                </p>
                <div class="col text-center">
                    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
                </div>
            </div>

            <!-- Submit button -->
            

        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }